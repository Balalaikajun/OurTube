{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "DataProtection": {
    "KeysPath": "keys"
  },
  "AllowedHosts": "*",
  "Cors": {
    "AllowedOrigins": "http://localhost:5173;http://localhost:5174;https://localhost"
  },
  "ConnectionStrings": {
    "DefaultConnection": "Host=YOUR_HOST;Port=YOUR_PORT;Database=YOUR_DATABASE;Username=YOUR_USERNAME;Password=YOUR_PASSWORD"
  },
  "SMTP": {
    "Server": "smtp.example.com",
    "Port": 587,
    "Email": "your-email@example.com",
    "Password": "your-smtp-password"
  },
  "MinIO": {
    "AccessKey": "your-minio-access-key",
    "SecretKey": "your-minio-secret-key",
    "Endpoint": "your-minio-endpoint:9000",
    "VideoBucket": "videos",
    "UserBucket": "users"
  },
  "VideoSettings": {
    "Resolutions": [
      "240",
      "360",
      "480",
      "720",
      "1080"
    ]
  },
  "FFmpeg": {
    "ExecutablesPath": "C:\\Path\\To\\FFmpeg"
  }
}
